{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {{ form_start(form, {'method':'POST'}) }}

        {{ form_row(form.email, {
            attr: {
                placeholder: 'Email'
            }
        }) }}
        {{ form_row(form.username, {
            attr: {
                placeholder: 'Username'
            }
        }) }}

        {{ form_row(form.plainPassword, {
            label: 'Password',
            attr: {
                placeholder: 'Password'
            }
        }) }}

    <input type="submit" value="Register">
    {{ form_end(form) }}
{% endblock %}